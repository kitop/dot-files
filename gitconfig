[user]
  name = Esteban Pastorino
  email = ejpastorino@gmail.com
[color]
  ui = true
[color "diff"]
  meta = yellow bold
[pager]
  diff = diff-so-fancy | less --tabs=1,5 -RFX
  show = diff-so-fancy | less --tabs=1,5 -RFX
  branch = false
[alias]
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
  lgf = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
  today = log --stat --since='1 Day Ago' --graph --pretty=oneline --abbrev-commit --date=relative
  changelog = log --pretty=format:\" * %s %Cred(%cn)%Creset\" 
  stash-all = stash save --include-untracked

  co = checkout
  st = status -sb
  update = add -u
  unstage = reset HEAD
  uncommit = reset --soft HEAD^
  new = ls-files --others --exclude-standard
  added = diff --cached --name-only

  ignore = update-index --assume-unchanged
  unignore = update-index --no-assume-unchanged
  ignored = !git ls-files -v | grep "^[[:lower:]]"

  ctags = "!.git/hooks/ctags"
  fixup = "commit --amend --no-edit"

[branch]
  autosetuprebase = always
[commit]
  template = ~/.gitmessage
[help]
  autocorrect = 1
[fetch]
  prune = true
[merge]
  conflictstyle = diff3
[push]
  # Push current branch even if you've never pushed it before
  default = current
  followTags = true
[rerere]
  enabled = 1
[status]
  showUntrackedFiles = all
#[transfer]
#  fsckobjects = true

[url "git@heroku.com:"]
  insteadOf = heroku:
[url "git@github.com:"]
  # With write access
  insteadOf = wgh:
[url "git://github.com/"]
  # Read-only
  insteadOf = gh:
[core]
  excludesfile = ~/.gitignore_global
[include]
  path = /Users/kito/dev/netlify/dev-bootstrap/config.include
[credential]
  helper = store
[init]
	templatedir = ~/.git_templates
